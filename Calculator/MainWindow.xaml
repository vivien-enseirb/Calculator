<Window x:Class="Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="850" Width="800"
        Background="#1E1E1E"
        KeyDown="WindowKeyDown"
        TextInput="WindowTextInput">
    
    <Window.Resources>
        
        <Style x:Key="CalcButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name = 'DisplayTextBox'
                     Grid.ColumnSpan="8"
                     FontSize="28"
                     Grid.Row="0"
                     FontWeight="Bold"
                     Foreground="White"
                     VerticalAlignment="Center"
                     TextAlignment="Right"
                     Padding="10"
                     Height="70"
                     Background="#333"
                     IsReadOnly="True"
                     />
            
            <Button Grid.Row="1" Grid.Column="0" Click="buttonClick" Grid.ColumnSpan="2" Content="7"  Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="2" Click="buttonClick" Grid.ColumnSpan="2" Content="8" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="4" Click="buttonClick" Grid.ColumnSpan="2" Content="9" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="0" Click="buttonClick" Grid.ColumnSpan="2" Content="4" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Click="buttonClick" Grid.ColumnSpan="2" Content="5" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="4" Click="buttonClick" Grid.ColumnSpan="2" Content="6" Style="{StaticResource CalcButtonStyle}" />
            <Button Grid.Row="3" Grid.Column="0" Click="buttonClick" Grid.ColumnSpan="2" Content="1" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Click="buttonClick" Grid.ColumnSpan="2" Content="2" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="4" Click="buttonClick" Grid.ColumnSpan="2" Content="3" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="0" Click="buttonClick" Grid.ColumnSpan="2" Content="("  Style="{StaticResource CalcButtonStyle}"  Background="DarkOrchid">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Orchid" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DarkOrchid" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Row="4" Grid.Column="2" Click="buttonClick" Grid.ColumnSpan="2" Content="0" Style="{StaticResource CalcButtonStyle}"/>
            <Button Grid.Row="4" Grid.Column="4" Click="buttonClick" Grid.ColumnSpan="2" Content=")" Style="{StaticResource CalcButtonStyle}" Background="DarkOrchid"><Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Orchid" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DarkOrchid" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Row="5" Grid.Column="4" Click="eraseClick" Grid.ColumnSpan="4" HorizontalAlignment="Stretch"  Content="←" Width="200" Style="{StaticResource CalcButtonStyle}" Background="DarkRed">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Red" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DarkRed" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Row="5" Grid.Column="0" Click="equalClick" Grid.ColumnSpan="4" HorizontalAlignment="Stretch"  Content="=" Width="200" Style="{StaticResource CalcButtonStyle}" Background="Navy">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Blue" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Navy" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Row="1" Grid.Column="6" Click="buttonClick" Grid.ColumnSpan="2" Content="+" Style="{StaticResource CalcButtonStyle}" Background="DarkOrange">
            <Button.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="Orange" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                            To="DarkOrange" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
            </Button>
            <Button Grid.Row="2" Grid.Column="6" Click="buttonClick" Grid.ColumnSpan="2" Content="-" Style="{StaticResource CalcButtonStyle}" Background="DarkOrange">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Orange" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DarkOrange" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
                </Button>
            <Button Grid.Row="3" Grid.Column="6" Click="buttonClick" Grid.ColumnSpan="2" Content="*" Style="{StaticResource CalcButtonStyle}" Background="DarkOrange" >
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Orange" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DarkOrange" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>
            <Button Grid.Row="4" Grid.Column="6" Click="buttonClick" Grid.ColumnSpan="2" Content="/" Style="{StaticResource CalcButtonStyle}" Background="DarkOrange">
                <Button.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="Orange" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DarkOrange" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Button.Triggers>
            </Button>

        </Grid>
    </StackPanel>
</Window>
